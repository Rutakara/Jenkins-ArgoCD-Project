pipeline {
  agent  any
  
  environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-cred')  
    DOCKER_CERT_PATH=C:\Users\username.docker\machine\certs
      }
  stages {
        stage ('Checkout') {
             steps {
               sh 'ls -lrt'
              //git branch: 'main', url: 'https://github.com/Rutakara/Jenkins-ArgoCD-Project.git'
      
            }
        }
        stage ('Build') {
             steps {
              sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
              sh 'docker build -t dockerbenson/helloworld:v1 .'
             }
        
        }
    }

}
