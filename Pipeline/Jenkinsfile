pipeline {
  agent any
  
  environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-cred')  
    //DOCKER_HOST = tcp://docker:2376/
    DOCKER_TLS_CERTDIR = "/certs"
    DOCKER_TLS_VERIFY = 1
    DOCKER_CERT_PATH = "$DOCKER_TLS_CERTDIR/client"
  }
  stages {
        stage ('Checkout') {
             steps {
               sh 'ls -lrt'
              //git branch: 'main', url: 'https://github.com/Rutakara/Jenkins-ArgoCD-Project.git'
      
            }
        }
        stage ('Build') {
             steps {
              sh 'docker build -t dockerbenson/helloworld:v1 .'
             }
        
        }
    }

}
