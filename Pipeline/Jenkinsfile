pipeline {
  agent {
    label 'docker-agent-python'
  }  
    stages {
        stage('Build') {
          environment {
             DOCKER_IMAGE = "dockerbenson/hello-world:v1"
             // DOCKERFILE_LOCATION = "Dockerfile"
             REGISTRY_CREDENTIALS = credentials('docker-cred')
          }
            steps {
              sh 'docker build -t ${DOCKER_IMAGE} .'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push dockerbenson/hello-world:v1'
            }
        }
        stage('Deploy') {
            steps {
                sh 'kubectl set image deployment/hello-world hello-world=dockerbenson/hello-world:v1'
            }
        }
    }
}
